<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.DashboardController" spacing="15" alignment="CENTER">
    <Label text="Welcome to the News Dashboard!" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Button text="View Articles" onAction="#handleViewArticles" />
    <Button text="Get Recommendations" onAction="#handleGetRecommendations" />
    <Button text="Update Profile" onAction="#handleUpdateProfile" />
    <Button text="Logout" onAction="#handleLogout" />
</VBox>

